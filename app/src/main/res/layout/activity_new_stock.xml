<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".NewStockActivity">
    <android.support.v7.widget.CardView
            android:id="@+id/judulpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:gravity="center">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/newstocksendal"
                    android:tint="@color/white"
                    android:contentDescription="@null"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white"
                    android:text="@string/stock_baru"
                    android:textSize="14sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/form_StockBaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/judulpage"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout
                android:id="@+id/field_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/field_ukuran"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/imgView_kode"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/colorPrimary"
                    android:contentDescription="@null"
                    android:padding="8dp" />

            <EditText
                    android:id="@+id/edt_KodeSendal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/editTextBackground"
                    android:hint="@string/kode_sendal"
                    android:paddingStart="20dp"
                    android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/field_ukuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/field_warna"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_code">

            <ImageView
                    android:id="@+id/imgView_ukuran"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/colorPrimary"
                    android:contentDescription="@null"
                    android:padding="8dp" />

            <EditText
                    android:id="@+id/edt_Ukuran"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/editTextBackground"
                    android:hint="@string/ukuran"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/field_warna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/field_jumlah"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_ukuran">

            <ImageView
                    android:id="@+id/imgView_warna"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp" />

            <EditText
                    android:id="@+id/edt_Warna"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/editTextBackground"
                    android:hint="@string/warna"
                    android:paddingStart="20dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/field_jumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/field_Keterangan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_warna">

            <ImageView
                    android:id="@+id/imgView_jumlah"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp" />

            <EditText
                    android:id="@+id/edt_Jumlah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/editTextBackground"
                    android:hint="@string/jumlah"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/field_Keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/field_Harga"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_jumlah">

            <ImageView
                    android:id="@+id/imgView_Keterangan"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp" />

            <EditText
                    android:id="@+id/edt_Keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/editTextBackground"
                    android:hint="@string/keterangan"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/field_Harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_Keterangan">

            <ImageView
                    android:id="@+id/imgView_Harga"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp" />

            <EditText
                    android:id="@+id/edt_Harga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/editTextBackground"
                    android:hint="@string/harga"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <Button
            android:id="@+id/btnAdd"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="Add"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_StockBaru"
            app:layout_constraintVertical_bias="0.026" />
</android.support.constraint.ConstraintLayout>